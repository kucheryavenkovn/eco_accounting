// Возвращает паметры заполнения раздела "Бухгалтерская запись" печатной формы Авансовый отчет (АО-1)
// Параметры:
//   ВыборкаПроводок  - ВыборкаИзРезультатаЗапроса
//   СсылкаНаДокумент - ДокументСсылка.АвансовыйОтчет, ДокументСсылка.ПутевойЛист
//
// Возвращаемое значение:
//     Структура с ключами типа:
//         * СубСчетДебет1  - ПланСчетовСсылка.Хозрасчетный
//         * СуммаДебет1    - Число
//         * СубСчетКредит1 - ПланСчетовСсылка.Хозрасчетный
//         * СуммаКредит1   - Число
//         * ИтогоПоУчету   - Число
//     где 1 - порядкой номер вида проводки (проводки с одинаковыми счетами суммируются)
//
Функция ПараметрыБухгалтерскойЗаписиПриПечатиАвансовогоОтчета(ВыборкаПроводок, СсылкаНаДокумент) Экспорт
	
	СтруктураРезультат = Новый Структура;
	
	Счетчик = 0;
	ИтогоПоУчету = 0;
	ВыборкаПроводок.Сбросить();
	СтруктураПоиска = Новый Структура("Регистратор", СсылкаНаДокумент);
	
	Пока ВыборкаПроводок.НайтиСледующий(СтруктураПоиска) Цикл
		
		Счетчик = Счетчик + 1;
		СтруктураРезультат.Вставить(СтрШаблон("СубСчетДебет%1", Счетчик), ВыборкаПроводок.СчетДт);
		СтруктураРезультат.Вставить(СтрШаблон("СуммаДебет%1", Счетчик), ВыборкаПроводок.Сумма);
		СтруктураРезультат.Вставить(СтрШаблон("СубСчетКредит%1", Счетчик), ВыборкаПроводок.СчетКт);
		СтруктураРезультат.Вставить(СтрШаблон("СуммаКредит%1", Счетчик), ВыборкаПроводок.Сумма);
		
		ИтогоПоУчету = ИтогоПоУчету + ВыборкаПроводок.Сумма;
		
		// Регламентированная форма АО-1 предусматривает только 8 строк для вывода Бухгалтерских записей
		Если Счетчик = 8 Тогда
			Прервать;
		КонецЕсли;
		
	КонецЦикла;
	
	СтруктураРезультат.Вставить("ИтогоПоУчету", ИтогоПоУчету);
	
	Возврат СтруктураРезультат;
	
КонецФункции

Функция СтруктураВалютногоОстаткаПоАвансу(ПараметрыВыполнения, КурсНаДатуДокумента)
	
	Результат = Новый Структура("Курс, Кратность, СуммаОстаток, ВалютнаяСуммаОстаток");
	ЗаполнитьЗначенияСвойств(Результат, КурсНаДатуДокумента);
	
	ВалютаРеглУчета = ОбщегоНазначенияБПВызовСервераПовтИсп.ПолучитьВалютуРегламентированногоУчета();
	
	Если ПараметрыВыполнения.ВалютаДокумента = ВалютаРеглУчета
		Или Не ПараметрыВыполнения.КурсРассчитывается Тогда
		Возврат Результат;
	КонецЕсли;
	
	ТекстЗапроса =
	"ВЫБРАТЬ
	|	ЕСТЬNULL(СУММА(Остатки.ВалютнаяСуммаОстаток), 0) КАК ВалютнаяСуммаОстаток,
	|	ЕСТЬNULL(СУММА(Остатки.СуммаОстаток), 0) КАК СуммаОстаток
	|ИЗ
	|	РегистрБухгалтерии.Хозрасчетный.Остатки(
	|			&МоментВремени,
	|			Счет В (&Субсчета71),
	|			ЗНАЧЕНИЕ(ПланВидовХарактеристик.ВидыСубконтоХозрасчетные.РаботникиОрганизаций),
	|			Организация = &Организация
	|				И Субконто1 = &ПодотчетноеЛицо
	|				И ЕСТЬNULL(Валюта, &ВалютаРеглУчета) = &ВалютаДокумента) КАК Остатки
	|ГДЕ
	|	Остатки.ВалютнаяСуммаОстаток > 0";
	
	Если БухгалтерскийУчетПереопределяемый.ВестиУчетПоПодразделениям() Тогда
		СхемаЗапроса = Новый СхемаЗапроса;
		СхемаЗапроса.УстановитьТекстЗапроса(ТекстЗапроса);
		
		ПараметрыЗапроса = СхемаЗапроса.ПакетЗапросов[0].Операторы[0].Источники[0].Источник.Параметры[3];
		ПараметрыЗапросаВыражения = Новый Массив;
		Если Не ПустаяСтрока(ПараметрыЗапроса.Выражение) Тогда
			ПараметрыЗапросаВыражения.Добавить(Строка(ПараметрыЗапроса.Выражение));
		КонецЕсли;
		
		ПараметрыЗапросаВыражения.Добавить("Подразделение = &ПодразделениеОрганизации");
		ПараметрыЗапроса.Выражение = Новый ВыражениеСхемыЗапроса(
			СтрСоединить(ПараметрыЗапросаВыражения, Символы.ПС + Символы.Таб + "И "));
		ТекстЗапроса = СхемаЗапроса.ПолучитьТекстЗапроса();
	КонецЕсли;
	
	Запрос = Новый Запрос(ТекстЗапроса);
	Запрос.УстановитьПараметр("ВалютаРеглУчета", ВалютаРеглУчета);
	Для Каждого ТекущийПараметр Из ПараметрыВыполнения Цикл
		Запрос.УстановитьПараметр(ТекущийПараметр.Ключ, ТекущийПараметр.Значение);
	КонецЦикла;
	
	Выборка = Запрос.Выполнить().Выбрать();
	Если Выборка.Следующий() И Выборка.СуммаОстаток > 0 Тогда
		ЗаполнитьЗначенияСвойств(Результат, Выборка);
		Результат.Курс = Окр(
			Выборка.СуммаОстаток * Результат.Кратность / Выборка.ВалютнаяСуммаОстаток, 4, 1);
	КонецЕсли;
	
	Возврат Результат;
	
КонецФункции

// Возвращает сумму итого "затрат" по учетным данным
// Параметры:
//   ВыборкаПроводок  - ВыборкаИзРезультатаЗапроса
//   СсылкаНаДокумент - ДокументСсылка.АвансовыйОтчет, ДокументСсылка.ПутевойЛист
//
// Возвращаемое значение:
//     Число - сумма итого "затрат" по учетным данным
//
Функция ИтогоПоУчету(ВыборкаПроводок, СсылкаНаДокумент)
	
	Субсчета71 = Новый Массив;
	ОбщегоНазначенияКлиентСервер.ДополнитьМассив(Субсчета71, БухгалтерскийУчетПовтИсп.СчетаВИерархии(
		ПланыСчетов.Хозрасчетный.РасчетыСПодотчетнымиЛицами));
	ОбщегоНазначенияКлиентСервер.ДополнитьМассив(Субсчета71, БухгалтерскийУчетПовтИсп.СчетаВИерархии(
		ПланыСчетов.Хозрасчетный.РасчетыСПодотчетнымиЛицамиВал));
	
	ИтогоПоУчету = 0;
	ВыборкаПроводок.Сбросить();
	СтруктураПоиска = Новый Структура("Регистратор", СсылкаНаДокумент);
	
	Пока ВыборкаПроводок.НайтиСледующий(СтруктураПоиска) Цикл
		Если Субсчета71.Найти(ВыборкаПроводок.СчетКт) <> Неопределено Тогда
			ИтогоПоУчету = ИтогоПоУчету + ВыборкаПроводок.Сумма;
		ИначеЕсли Субсчета71.Найти(ВыборкаПроводок.СчетДт) <> Неопределено Тогда
			ИтогоПоУчету = ИтогоПоУчету - ВыборкаПроводок.Сумма;
		КонецЕсли;
	КонецЦикла;
	
	Возврат ИтогоПоУчету;
	
КонецФункции

