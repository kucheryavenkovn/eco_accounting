// Возвращает общие параметры для заполнения печатной формы Авансовый отчет (АО-1).
//
// Параметры:
//   ДанныеДокумента - структура (см. описание НовыеПараметрыЗаполненияПечатнойФормыАвансовогоОтчета())
//   ДанныеВалюты    - Структура (см. РаботаСКурсамиВалют.ПолучитьКурсВалюты())
//
// Возвращаемое значение:
//    Структура (см. описание НовыеПараметрыПечатиАвансовогоОтчета())
//
Функция ПараметрыЗаполненияПечатнойФормыАвансовыйОтчет(ДанныеДокумента, ДанныеВалюты = Неопределено) Экспорт
	
	ВалютаРегламентированногоУчета = ОбщегоНазначенияБПВызовСервераПовтИсп.ПолучитьВалютуРегламентированногоУчета();
	СтруктураРезультат = НовыеПараметрыПечатиАвансовогоОтчета();
	
	ДанныеПодотчетногоЛица = ОбщегоНазначенияБПВызовСервера.ДанныеФизЛица(
		ДанныеДокумента.Организация, ДанныеДокумента.ПодотчетноеЛицо, ДанныеДокумента.ДатаДокумента);
	
	ПодотчетноеЛицо         = ДанныеПодотчетногоЛица.Представление;
	ПодотчетноеЛицоОт       = ПодотчетноеЛицо;
	ТабельныйНомер          = ДанныеПодотчетногоЛица.ТабельныйНомер;
	//Должность               = ДанныеПодотчетногоЛица.Должность;//СВД
	Должность               = ДанныеДокумента.ПодотчетноеЛицо.Должность;
	ПодразделениеСотрудника = ДанныеПодотчетногоЛица.ПодразделениеОрганизации;
	
	ЗаполнитьЗначенияСвойств(СтруктураРезультат, ДанныеДокумента);
	
	Если ЗначениеЗаполнено(ПодразделениеСотрудника) Тогда
		ПараметрыПодразделения = ОбщегоНазначения.ЗначенияРеквизитовОбъекта(
			ПодразделениеСотрудника, "Код,Наименование,НаименованиеПолное");
		
		СтруктураРезультат.Вставить("ПредставлениеПодразделения", ?(ПустаяСтрока(ПараметрыПодразделения.НаименованиеПолное),
			ПараметрыПодразделения.Наименование,
			ПараметрыПодразделения.НаименованиеПолное));
		СтруктураРезультат.Вставить("КодПодразделения", ПараметрыПодразделения.Код);
		
	КонецЕсли;
	
	НомерНаПечать = ПрефиксацияОбъектовКлиентСервер.НомерНаПечать(ДанныеДокумента.Номер, Истина, Ложь);
	
	СтруктураРезультат.Вставить("ПредставлениеПодотчетногоЛица",          ПодотчетноеЛицо);
	СтруктураРезультат.Вставить("ПредставлениеПодотчетногоЛицаОт",        ПодотчетноеЛицоОт);
	СтруктураРезультат.Вставить("ТабельныйНомер",                         ТабельныйНомер);
	СтруктураРезультат.Вставить("ДолжностьПодотчетногоЛицаПредставление", Должность);
	СтруктураРезультат.Вставить("НомерДокумента",                         НомерНаПечать);
	
	СведенияОбОрганизации    = БухгалтерскийУчетПереопределяемый.СведенияОЮрФизЛице(
		ДанныеДокумента.Организация, ДанныеДокумента.ДатаДокумента);
	
	ПредставлениеОрганизации = ОбщегоНазначенияБПВызовСервера.ОписаниеОрганизации(
		СведенияОбОрганизации, "НаименованиеДляПечатныхФорм,");
	
	ПодразделениеОтветственныхЛиц =
		?(ЗначениеЗаполнено(ПодразделениеСотрудника), ПодразделениеСотрудника ,ДанныеДокумента.ПодразделениеОрганизации);
	
	Руководители = ОтветственныеЛицаБП.ОтветственныеЛица(
		ДанныеДокумента.Организация, ДанныеДокумента.ДатаДокумента, ПодразделениеОтветственныхЛиц);
	
	Руководитель = Руководители.РуководительПредставление;
	Бухгалтер    = Руководители.ГлавныйБухгалтерПредставление;
	Кассир       = Руководители.КассирПредставление;
	
	ДляРасчета = ДанныеДокумента.СуммаДокументаРуб;
	
	СуммаОкругление = Окр(ДляРасчета, 2, 1);
	ЦелаяСумма    = Цел(СуммаОкругление);
	ОстатокСумма  = Формат((СуммаОкругление - ЦелаяСумма) * 100, "ЧЦ=2; ЧН=00; ЧВН=");
	СуммаПрописью = ОбщегоНазначенияБПВызовСервера.СформироватьСуммуПрописью(
		СуммаОкругление, ВалютаРегламентированногоУчета);
	
	СуммаРасшифровка = СтрШаблон(НСтр("ru = '%1 (%2 руб. %3 коп.)'"), СуммаПрописью, ЦелаяСумма, ОстатокСумма);
	
	СтруктураРезультат.Вставить("ИзрасходованоРуб", ЦелаяСумма);
	СтруктураРезультат.Вставить("ИзрасходованоКоп", ОстатокСумма);
	СтруктураРезультат.Вставить("ДатаДокумента",    ДанныеДокумента.ДатаДокумента);
