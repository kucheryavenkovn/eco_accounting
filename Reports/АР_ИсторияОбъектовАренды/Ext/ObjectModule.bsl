
Процедура ПриКомпоновкеРезультата(ДокументРезультат, ДанныеРасшифровки, СтандартнаяОбработка)
	
	ПараметрПериод = КомпоновщикНастроек.Настройки.ПараметрыДанных.НайтиЗначениеПараметра(Новый ПараметрКомпоновкиДанных("Период"));
	ИДПараметра = КомпоновщикНастроек.ПользовательскиеНастройки.ПолучитьИдентификаторПоОбъекту(ПараметрПериод);
	ЗначениеПараметра = КомпоновщикНастроек.ПользовательскиеНастройки.Элементы.Найти(ИДПараметра);
	Если ЗначениеПараметра <> Неопределено Тогда
		Если НЕ ЗначениеПараметра.Использование ИЛИ Не ЗначениеЗаполнено(ЗначениеПараметра.Значение) Тогда
			ПериодНД = НачалоДня(ТекущаяДата());
		Иначе
			ПериодНД = НачалоДня(ЗначениеПараметра.Значение);
		КонецЕсли;
	
		ЗначениеПараметра = КомпоновщикНастроек.Настройки.ПараметрыДанных.НайтиЗначениеПараметра(Новый ПараметрКомпоновкиДанных("ПериодНД"));
		Если ЗначениеПараметра <> Неопределено Тогда
			ЗначениеПараметра.Значение = ПериодНД;
			ЗначениеПараметра.Использование = Истина;
		КонецЕсли;
	КонецЕсли;	
	
КонецПроцедуры

